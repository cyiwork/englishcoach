  <script>
    // SERVICES
    const services = {
      en: ["Business English", "DSAT", "Speaking Confidence", "Kids 6-12", "Teens 13-19", "Adults", "IELTS"],
      ru: ["Бизнес-английский", "DSAT", "Разговорный английский", "Дети 6-12 лет", "Подростки 13-19 лет", "Взрослые", "IELTS"]
    };

    // TESTIMONIALS
    const testimonialImages = [
      "https://i.imgur.com/AbC123d.jpg",
      "https://i.imgur.com/XyZ789e.jpg",
      "https://i.imgur.com/LmN456f.jpg"
    ];

    function createTestimonialItem(imgUrl) {
      const item = document.createElement('div');
      item.className = 'testimonial-item';

      const button = document.createElement('button');
      button.className = 'testimonial-question-btn';
      button.textContent = "Student Review";

      const answerContainer = document.createElement('div');
      answerContainer.className = 'testimonial-answer-container';

      const img = document.createElement('img');
      img.src = imgUrl; // ✅ FIXED: was 'imageUrl'
      img.alt = "Student WhatsApp Review";
      img.className = 'testimonial-img';
      img.loading = "lazy";

      answerContainer.appendChild(img);
      item.appendChild(button);
      item.appendChild(answerContainer);

      button.addEventListener('click', () => {
        item.classList.toggle('active');
      });

      return item;
    }

    // ABOUT ME
    const aboutMe = {
      en: {
        question: "Who is Alek?",
        answer: "I help students of all ages — from kids to CEOs — speak English with confidence. I mix fun, games, and real-life practice so learning never feels like work!"
      },
      ru: {
        question: "Кто такой Алек?",
        answer: "Я помогаю ученикам всех возрастов — от детей до руководителей — говорить по-английски уверенно. Я смешиваю игры, веселье и практику, чтобы обучение никогда не казалось работой!"
      }
    };

    // FAQ
    const faqs = {
      en: [
        {
          question: "How do lessons work?",
